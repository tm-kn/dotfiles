#!/bin/sh
set -e

main() {
    case $1 in
        --enable)
            kill -s USR1 $(pidof dunst)
            echo "Enabled do not disturb"
            exit 0
            ;;
        --disable)
            kill -s USR2 $(pidof dunst)
            echo "Disabled do not disturb"
            exit 0
            ;;
        *)
            echo "$0: Wrong argument, use --enable or --disable."
            exit 1
    esac

}

main $1
