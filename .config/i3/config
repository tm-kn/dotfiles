exec --no-startup-id nm-applet

# Start blueman applet
exec --no-startup-id blueman-applet

# Set the wallpaper
exec_always --no-startup-id $wallpaper_cmd

# Launch Thunar daemon
exec --no-startup-id thunar --deamon

# Launch Transmission
exec --no-startup-id transmission-gtk --minimized

# Launch ownCloud
