set $mod Mod4
set $movemod Mod1

set $wallpaper_cmd ~/.fehbg

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesnâ€™t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Hide window borders
hide_edge_borders both

# start a terminal
set $terminal urxvtc -e tmux new-session -A -s main
bindsym $mod+Return exec $terminal

# start a web browser
set $www firefox
bindsym $mod+Shift+f exec --no-startup-id $www

# Start a file manager
set $files thunar
bindsym $mod+Shift+d exec --no-startup-id $files

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $movemod+h move left
bindsym $movemod+j move down
bindsym $movemod+k move up
bindsym $movemod+l move right

# split in horizontal orientation
bindsym $mod+Shift+h split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $movemod+1 move container to workspace 1
bindsym $movemod+2 move container to workspace 2
bindsym $movemod+3 move container to workspace 3
bindsym $movemod+4 move container to workspace 4
bindsym $movemod+5 move container to workspace 5
bindsym $movemod+6 move container to workspace 6
bindsym $movemod+7 move container to workspace 7
bindsym $movemod+8 move container to workspace 8
bindsym $movemod+9 move container to workspace 9
bindsym $movemod+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3status
}

# Mod+l to lock the screen
bindsym ctrl+$mod+l exec --no-startup-id sleep 1 && xset dpms force suspend
bindsym XF86ScreenSaver exec --no-startup-id sleep 1 && xset dpms force suspend

# Suspend
bindsym XF86Sleep exec --no-startup-id systemctl suspend
bindsym XF86Suspend exec --no-startup-id systemctl hibernate

# Lock screen on suspend
exec --no-startup-id xss-lock sh ~/.config/i3/config/lock.sh

# Turn the bell sound off
exec --no-startup-id xset -b

# Move windows between screens
bindsym Shift+$mod+Right move workspace to output right
bindsym Shift+$mod+Left move workspace to output left

# Audio keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Camera key
bindsym XF86WebCam exec --no-startup-id guvcview

# Screenshot keys
set $screenshot_filename 'Screenshot_%s_%H%M_%d.%m.%Y_$wx$h.png'
bindsym --release Print exec scrot $screenshot_filename  -e 'mv $f ~/Pictures/'
bindsym --release Shift+Print exec scrot -s $screenshot_filename  -e 'mv $f ~/Pictures/'
bindsym --release $mod+Shift+Print exec scrot -u -d 4 $screenshot_filename  -e 'mv $f ~/Pictures/'


# Monitor selection
bindsym XF86Display exec --no-startup-id arandr

bindsym $mod+p mode "display"

set $laptop eDP1
set $dp DP1
set $dockdp DP2-1

mode "display" {
    # only laptop
    bindsym 1 exec --no-startup-id xrandr --output $laptop --auto \
                                          --output $dp --off \
                                          --output $dockdp --off; \
              exec --no-startup-id sleep 1 && $wallpaper_cmd; \
              mode "default"

    # Only external monitors
    bindsym 2 exec --no-startup-id xrandr --output $dp --auto \
                                          --output $dockdp --auto \
                                          --output $laptop --off; \
              exec --no-startup-id sleep 1 && $wallpaper_cmd; \
              mode "default"

    # Both external monitor and laptop (laptop on the left)
    bindsym 3 exec --no-startup-id xrandr --output $laptop --auto \
                                          --output $dp --auto --right-of $laptop \
                                          --output $dockdp --auto --right-of $laptop; \
              exec --no-startup-id sleep 1 && $wallpaper_cmd; \
              mode "default"

    # Both external monitor and laptop (laptop on the right)
    bindsym 4 exec --no-startup-id xrandr --output $laptop --auto \
                                          --output $dp --auto --left-of $laptop  \
                                          --output $dockdp --auto --left-of $laptop; \
              exec --no-startup-id sleep 1 && $wallpaper_cmd; \
              mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Brightness keys
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10

# Bind alternative audio keys
set $music_previous cmus-remote -r
set $music_play_pause cmus-remote -u
set $music_next cmus-remote -n
set $music_stop cmus-remote -s

bindsym XF86Search      exec $music_previous
bindsym XF86LaunchA     exec $music_play_pause
bindsym XF86Explorer    exec $music_next

bindsym XF86AudioNext   exec $music_next
bindsym XF86AudioPlay   exec $music_play_pause
bindsym XF86AudioPrev   exec $music_previous
bindsym XF86AudioStop   exec $music_stop

# Password manager
bindsym Shift+$mod+K exec --no-startup-id keepassxc

# Start pulseaudio
exec --no-startup-id start-pulseaudio-x11

# Launch the network manager applet
exec --no-startup-id nm-applet

# Start blueman applet
exec --no-startup-id blueman-applet

# Set the wallpaper
exec_always --no-startup-id $wallpaper_cmd

# Launch Thunar daemon
exec --no-startup-id thunar --deamon

# Launch Transmission
exec --no-startup-id transmission-gtk --minimized

# Launch ownCloud
exec --no-startup-id owncloud

# Start urxvt daemon
exec --no-startup-id urxvtd --quiet --opendisplay --fork

# Start clipboard manager - parcellite
exec --no-startup-id parcellite
