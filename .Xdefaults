!! Appearance
urxvt*scrollBar: true
!! Font prefferenes
urxvt*font: xft:Monospace:pixelsize=16:antialias=true
urxvt*boldFont: xft:Monospace:bold:pixelsize=13:antialias=true
urxvt*letterSpace: -1
!! Larger history limit
urxvt*saveLines: 1000000

!! Scrolling in pagers
urxvt*secondaryScreen: 1
urxvt*secondaryScroll: 0
urxvt*secondaryWheel: 1

!! Perl extensions
urxvt*perl-ext-common: default,matcher,resize-font
!! Open urls in browser with Control-Click
urxvt*url-launcher: xdg-open
urxvt*matcher.button: C1

urxvt*keysym.Home:          \033[1~
urxvt*keysym.End:           \033[4~

urxvt*foreground: #2E3436
urxvt*colorUL: #4682B4
